<script>
  // Chat send logic
  const chatBox = document.getElementById('chat-box');
  const chatInput = document.getElementById('chat-input');
  const chatSend = document.getElementById('chat-send');
  
  chatSend.onclick = () => {
    const txt = chatInput.value.trim();
    if (!txt) return;
    const div = document.createElement('div');
    div.className = 'msg me';
    div.textContent = '@You: ' + txt;
    chatBox.appendChild(div);
    chatInput.value = '';
    chatBox.scrollTop = chatBox.scrollHeight;
  };

  // Fake PDF download function
  function downloadPDF() {
    const blankPDF = 'JVBERi0xLjQKJeLjz9MNCjEgMCBvYmo8PC9UeXBlL0NhdGFsb2cvUGFnZXMgMiAwIFI+PgplbmRvYmoNCjIgMCBvYmo8PC9UeXBlL1BhZ2VzL0NvdW50IDEvS2lkcyBbMyAwIFJdPj4NZW5kb2JqDQozIDAgb2JqPDwvVHlwZS9QYWdlL1BhcmVudCAyIDAgUi9NZWRpYUJveCBbMCAwIDU5NSAODcyXS9Db250ZW50cyA0IDAgUiA+PmVuZG9iag0KNC
AwIG9iajw8L0xlbmd0aCAxMSA+PnN0cmVhbQpBT0YNCmVuZHN0cmVhbQ1lbmRvYmoNCnhyZWYNCjAgNQowMDAwMDAwMDAwIDY1NTM1IGYNCjAwMDAwMDAwMTUgMDAwMDAgbiAKMDAwMDAwMDA4MSAwMDAwMCBuIAowMDAwMDAwMTQwIDAwMDAwIG4gCjAwMDAwMDAxOTkgMDAwMDAgbiAKdHJhaWxl
cjw8L1Jvb3QgMSAwIFIvU2l6ZSA1Pj4Nc3RhcnR4cmVmCjI5OA0KJSVFT0Y=';
    const link = document.createElement('a');
    link.href = 'data:application/pdf;base64,' + blankPDF;
    link.download = 'August21_Report.pdf';
    link.click();
  }

