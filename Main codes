<!-- animated casualty counter -->
<div id="counter">Casualties  0</div>

<script>
  /* animate casualty counter to 50 000 */
  const counter = document.getElementById('counter');
  let n = 0, target = 50000;
  function step(){
    if(n < target){
      n += Math.floor((target-n)/18)+8;
      if(n>target) n = target;
      counter.textContent = 'Casualties  ' + n.toLocaleString();
      requestAnimationFrame(step);
    }
  }
  step();
</script>

