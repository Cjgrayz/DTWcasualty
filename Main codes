<div id="memorial-wall"></div>

<script>
  const firstNames = ["Amanda","Bryce","Caleb","Dina","Elijah","Fatima","Gavin","Harper","Imani","Jonas","Kaitlyn","Leo","Maya","Nathan","Olivia","Parker","Quinn","Riley","Sofia","Tariq","Uriel","Valentina","Wesley","Ximena","Yara","Zion"];
  const lastNames = ["Reyes","Patterson","Nguyen","Hoffman","Stone","Rahim","Blake","Liu","King","Rivera","O'Malley","Martinez","Ford","Chen","Singh","Walker","Green","Murphy","Thomas","Young"];

  function getRandomName() {
    const first = firstNames[Math.floor(Math.random() * firstNames.length)];
    const last = lastNames[Math.floor(Math.random() * lastNames.length)];
    return `${first} ${last}`;
  }

  const wall = document.getElementById('memorial-wall');
  for(let i=0; i<50; i++){
    const div = document.createElement('div');
    div.className = 'victim-name';
    div.textContent = getRandomName();
    wall.appendChild(div);
  }
</script>
